{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/username/Desktop",
        "/path/to/other/allowed/dir"
      ]
    },
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://DB_USER:DB_PASS@localhost:5432/DB_NAME"
      ]
    },
    "weather": {
      "command": "npx",
      "args": [
        "-y",
        "tsx",
        "/your/mcp/route/main.ts"
      ]
    }
  }
}